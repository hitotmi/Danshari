<div class="mt-2">
  <% if current_user.id == counseling_post.user_id %>
    <% if post_comment.good_commented_by?(current_user) %>
      <%= link_to "グッドアドバイス済み", counseling_post_post_comment_good_comments_path(counseling_post.id, post_comment.id),method: :delete, remote: true, class: "btn btn-unfavorite" %>
    <% else %>
      <%= link_to "グッドアドバイス", counseling_post_post_comment_good_comments_path(counseling_post.id, post_comment.id),method: :post, remote: true, class: "btn btn-favorite" %>
    <% end %>
  <% else %>
    <% if post_comment.good_commented_by?(counseling_post.user) %>
      <div class="badge mt-5">
        <i class="fa-solid fa-heart"></i>相談者からグットアドバイスをいただきました
      </div>
    <% end %>
  <% end %>
</div>