<div class="main">
  <div class="card devise-card">
    <%= render 'layouts/error', obj: @user %>
    <div class="form-wrap">
      <div class="form-group text-center new-post ">
        <h3><strong>プロフィール編集</strong></h3>
      </div>
      <div class="new-form">
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label :profile_image, "プロフィール画像" %>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :name,  "名前" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction,  "自己紹介" %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "更新する", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "退会する", user_withdraw_confirm_path(current_user), class: "btn btn-danger" %>
  </div>
</div>