<% if user_signed_in? %>
  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <%= form_with url: counseling_posts_path, method: :get, local: true do |f| %>
          <div class="row">
            <div class="col-11">
              <%= f.select :tag_ids, options_from_collection_for_select(Tag.all, 'id', 'name'), { include_blank: 'タグを選択してください' }, class: 'form-control' %>
            </div>
            <div class="col-1">
              <%= f.submit "検索",class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>