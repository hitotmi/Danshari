<%= render "layouts/flash_logout" %>
<div class="main container">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center new-registrations-title mt-3 mb-3">
        <h4>ログイン画面</h4>
      </div>
      <div class="new-form">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "example@example.com", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "ログインする", class: "btn btn-color-blue w-100" %>
          </div>
        <% end %>
      </div>
      <p class="devise-link text-center">
        アカウントをお持ちでないですか？
        <%= link_to "新規登録する", new_user_registration_path %>
      </p>
    </div>
  </div>
</div>
