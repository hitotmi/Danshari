<div class="py-4" style=" background-color: #19A7CE;">
  <h2 class="text-center" style="color: #FFF; font-weight: bold;">通知</h2>
  <span style="display: block; text-align: center; font-size: 20px;">notification</span>
</div>

<%= render "layouts/flash" %>
<div class="container pt-1 pb-5 <%= flash[:notice] || flash[:alert] ? 'mt-0' : 'mt-5' %>" style="background-color: #FFF; border: 1px solid #ebebeb;">
  <div class="d-flex justify-content-between mb-3 mt-5">
    <h4>新着</h4>
    <%= link_to notification_path(@notifications), class: "btn btn-delete", method: :delete do %>
      <i class="fa-solid fa-x"></i>全部削除する
    <% end %>
  </div>
  <div class="row">
    <div class="col-12" style="background-color: #FFF;">
      <div class="notification-border-top">
        <% if @notifications.exists? %>
        <div>
          <%= render @notifications %>
        </div>
        <% else %>
          <p>通知はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>