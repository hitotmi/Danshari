<div class="container">
  <h3 class="mt-5 text-center mb-5">通知</h3>
  <div class="d-flex justify-content-end mb-3">
    <%= link_to notification_path(@notifications), class: "btn btn-delete", method: :delete do %>
      <i class="fa-solid fa-x"></i>全部削除する
    <% end %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="notification-border-top">
        <% if @notifications.exists? %>
        <div>
          <%= render @notifications %>
        </div>
        <% else %>
          <p>通知はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>