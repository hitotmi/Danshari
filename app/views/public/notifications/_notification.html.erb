<% visitor = notification.visitor %>

<div class="user-view clearfix pb-2 pt-2 notification" style="border-bottom: 1px solid #D8D8D8;">
  <%= link_to user_path(notification.visitor) do %>
    <%= image_tag visitor.get_profile_image(50,50), class: "rounded-circle user-image" %>
  <% end %>
  <%= notification_form(notification) %>
  <span><%= " (#{time_ago_in_words(notification.created_at.in_time_zone("Tokyo"))} 前)" %></span>
  <br>
  <% post_comment = get_post_comment(notification) %>
  <% unless post_comment.nil? %>
    <p><%= simple_format(post_comment) %></p>
  <% end %>
</div>