<div class="container">
  <h3 class="text-center mb-5 mt-3"><%= @user.name %>さんの詳細</h3>
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="col-sm-2 col-4">会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td class="col-sm-2 col-4"></td>
          <td><%= image_tag @user.get_profile_image, size: '80x80', class: "rounded-circle user-image" %></td>
        </tr>
        <tr>
          <td class="col-sm-2 col-4">ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class="col-sm-2 col-4">自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td class="col-sm-2 col-4">会員ステータス</td>
          <% if @user.is_deleted == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% end %>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %>
            <%= link_to "一覧に戻る", admin_users_path, class: "btn btn-primary" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>