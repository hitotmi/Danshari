<% if admin_signed_in? %>
  <div class="row">
    <div class="col-12 col-sm-11 col-md-12">
      <div class="form-group">
        <%= form_with url: admin_counseling_posts_path, method: :get, local: true do |f| %>
          <div class="row">
            <div class="col-9 col-sm-11">
              <%= f.text_field :content, placeholder: "検索したいキーワードを入力してください", class: "form-control" %>
            </div>
            <div class="col-3 col-sm-1">
              <%= button_tag type: "submit", class: "btn btn-submit" do %>
                <i class="fa-solid fa-magnifying-glass"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>