<h3 class="text-center show-underline-text mt-4 mb-4"><strong><%= counseling_post.post_comments.count %>件回答</strong></h3>
<div class="card mb-3" style="height: 800px; overflow-y: scroll;">
  <div class="card-body answer-card">
    <% counseling_post.post_comments.each do |post_comment| %>
      <div class="d-flex align-items-center mb-3 mt-2 pb-2">
        <%= link_to admin_user_path(post_comment.user_id) do %>
          <%= image_tag post_comment.user.get_profile_image(50,50), class: "rounded-circle mr-3" %>
        <% end %>
        <div>
          <%= link_to admin_user_path(post_comment.user_id) do %>
            <p class="card-title mb-0"><%= post_comment.user.name %>さん</p>
          <% end %>
          <p class="card-text mb-0"><small><%= post_comment.created_at.strftime('%Y/%m/%d') %></small></p>
        </div>
      </div>
      <div style="border-bottom: 1px solid gray;">
        <p class="card-text"><%= simple_format(post_comment.comment) %></p>
        <% if current_admin %>
          <%= link_to '削除', admin_counseling_post_post_comment_path(counseling_post, post_comment), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
